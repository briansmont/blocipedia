<h1>Make a new wiki!</h1>

<div class="row">
  <div class="col-md-4">
    <p>Rules for new wikis:</p>
    <ul>
      <li>Fact check your data</li>
      <li>Reference your sources</li>
      <li>Keep it clean</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter your data" %>
      </div>
      <%= render partial: 'wikis/form', locals: { f: f } %>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
