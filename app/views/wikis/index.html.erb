<h1>All Wikis Available:</h1>


<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <h5 class="media-body">
          <%=link_to markdown(wiki.title), wiki %> <small>created by <%= wiki.user.name %></small>
        </h5>
        <small>
          <%= markdown(wiki.body) %>
        </small>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Create Wiki", new_wiki_path, class: 'btn btn-success' %>  
  </div>
</div>